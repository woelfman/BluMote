<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_weight="0.45"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >
		<Spinner
		    android:id="@+id/device_spinner"
		    android:layout_width="250dp"
		    android:layout_height="50dp"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:background="@drawable/spinner_look"
		    android:prompt="@string/spinner_prompt"
		    android:textColor="#FFFFFF" />
	</RelativeLayout>
	
    <LinearLayout
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
		android:layout_width="500dp" 
		android:layout_height="0dp"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:layout_gravity="center|center_horizontal|center_vertical"
		android:layout_weight="1">
		<View android:id="@+id/strut1"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent" 
	        android:layout_weight="1" 
	        style="@style/CustomImageBtnText"
	        android:visibility="invisible"/>
		<ImageButton android:id="@+id/btn_home" 
		    android:src="@drawable/go_home" 
		    style="@style/CustomImageBtnText"  
		    android:layout_width="0dp" 
		    android:layout_weight="1" 
		    android:layout_height="fill_parent"></ImageButton>
		<View android:id="@+id/strut1"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent" 
	        android:layout_weight="1" 
	        style="@style/CustomImageBtnText"
	        android:visibility="invisible"/>
    </LinearLayout>
	
	<LinearLayout
		android:layout_marginTop="10dp"
		android:orientation="horizontal"
		android:layout_width="500dp" 
		android:layout_height="0dp"
		android:layout_gravity="center|center_horizontal|center_vertical"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:layout_weight="1"
		android:weightSum="3.0"> 
		<ImageButton style="@style/CustomImageBtnText" android:layout_width="0dp" android:src="@drawable/media_seek_backward" android:id="@+id/back_btn" android:scaleType="centerInside"></ImageButton>			
		<ImageButton style="@style/CustomImageBtnText" android:layout_width="0dp" android:src="@drawable/go_up" android:id="@+id/btn_up" android:scaleType="centerInside" android:layout_gravity="center_horizontal"></ImageButton>
		<ImageButton style="@style/CustomImageBtnText" android:layout_width="0dp" android:src="@drawable/media_seek_forward" android:id="@+id/forward_btn" android:scaleType="centerInside"></ImageButton>		
	</LinearLayout>

	<LinearLayout
	    android:layout_width="500dp"
	    android:layout_height="0dp"
	    android:layout_gravity="center"
	    android:layout_weight="1"
	    android:orientation="horizontal"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:weightSum="3.0" >

		<ImageButton style="@style/CustomImageBtnText" android:src="@drawable/go_previous" android:id="@+id/left_btn" android:scaleType="centerInside"></ImageButton>    		
		<Button android:id="@+id/btn_enter" android:text="Enter" style="@style/CustomBtnText"></Button>
		<ImageButton style="@style/CustomImageBtnText" android:src="@drawable/go_next" android:id="@+id/right_btn" android:scaleType="centerInside"></ImageButton>    		
	</LinearLayout>	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="500dp"
		android:layout_height="0dp"
		android:layout_gravity="center"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:layout_weight="3"
		android:weightSum="3.0">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:weightSum="3.0">		
				<ImageButton style="@style/CustomImageBtnText" android:layout_width="fill_parent" android:src="@drawable/go_return" android:id="@+id/return_btn"></ImageButton>
				<ImageView android:src="@drawable/spacer" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_marginTop="5dp" android:visibility="invisible"/> 
				<ImageView android:src="@drawable/spacer" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_marginTop="5dp" android:visibility="invisible"/> 		
			</LinearLayout>	    
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:weightSum="3.0">			  			
				<ImageButton style="@style/CustomImageBtnText" android:layout_width="fill_parent" android:src="@drawable/go_down" android:id="@+id/down_btn" android:scaleType="centerInside"></ImageButton>										    					    
				<ImageButton style="@style/CustomImageBtnText" android:layout_width="fill_parent" android:src="@drawable/media_playback_start_pause" android:id="@+id/play_btn" android:scaleType="centerInside"></ImageButton>
				<ImageView android:src="@drawable/spacer" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_marginTop="5dp" android:visibility="invisible"/>     															    				    					    
			</LinearLayout>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:weightSum="3.0">
				<ImageButton style="@style/CustomImageBtnText" android:layout_width="fill_parent" android:src="@drawable/asterisk_orange_icon" android:id="@+id/fav_btn" android:scaleType="centerInside"></ImageButton>
				<ImageView android:src="@drawable/spacer" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_marginTop="5dp" android:visibility="invisible"/>  		    				    
				<ImageView android:src="@drawable/spacer" android:layout_width="fill_parent"
					android:layout_height="fill_parent" android:layout_marginTop="5dp" android:visibility="invisible"/> 				    					
			</LinearLayout>
	</LinearLayout>
	
	<ImageView android:src="@drawable/right_circle_two" android:layout_width="50dp"
			android:layout_height="20dp" android:layout_marginTop="5dp"
			android:scaleType="fitXY" android:layout_gravity="center_horizontal"
			android:visibility="invisible"
	></ImageView> 
</LinearLayout>
